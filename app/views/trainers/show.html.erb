<div class="d-flex">
  <div>
    <%= render 'shared/sidebar' %>

  </div>
  <div class="w-100">
    <%= render 'shared/navbar' %>
    <div class="container-trainer mt-3">
      <h2 class="text-center mt-4"><%= @trainer.first_name %> <%= @trainer.last_name %></h2>
      <% if @trainer.photo.key %>
          <%= cl_image_tag @trainer.photo.key, crop: :fill, class:"mt-3 photo-trainer" %>
        <% else %>
          <%= image_tag 'https://upload.wikimedia.org/wikipedia/commons/8/89/Portrait_Placeholder.png', class:"mt-3 photo-trainer" %>
      <% end %>
      <div class="mt-4">Email: </div>
      <div class="border-answer"><%= @trainer.email %></div>
      <div class="mt-2">Username: </div>
      <div class="border-answer"><%= @trainer.username %></div>
      <div class="mt-2">Country: </div>
      <div class="border-answer"><%= @trainer.country %></div>
      <div class="mt-2">Pokemons: </div>
      <div class="border-answer"><% @trainer.pokemons.each do |p| %>
        <%= p.name %>&nbsp;
      <% end %>
      </div>
    </div>
  </div>
